<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- CardView sebagai kontainer untuk tabel -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <!-- Tabel dengan 2 kolom -->
        <GridLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2">

            <!-- Kolom pertama: Total Pemasukan -->
            <TextView
                android:layout_marginBottom="5dp"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Total Pemasukan"
                android:textStyle="bold" />

            <!-- Kolom kedua: Total Pengeluaran -->
            <TextView
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Total Pengeluaran"
                android:textStyle="bold" />

            <TextView
                android:layout_marginBottom="20dp"
                android:textAlignment="center"
                android:id="@+id/totalPemasukan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:textSize="13dp"
                android:textColor="#4CAF50"
                android:text="Rp 0"
                android:textStyle="bold" />

            <!-- Kolom kedua: Total Pengeluaran -->
            <TextView
                android:textAlignment="center"
                android:id="@+id/totalPengeluaran"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Rp 0"
                android:textColor="#E91E1E"
                android:textSize="13dp"
                android:textStyle="bold" />

            <!-- Tanggal Awal Bulan -->
            <TextView
                android:layout_marginBottom="5dp"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Tanggal Awal"
                android:textStyle="bold" />

            <!-- Kolom kedua: Total Pengeluaran -->
            <TextView
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Tanggal Akhir"
                android:textStyle="bold" />

            <TextView
                android:layout_marginBottom="10dp"
                android:textAlignment="center"
                android:id="@+id/tglAwal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:textSize="13dp"
                android:text="01/02/2023" />

            <!-- Kolom kedua: Total Pengeluaran -->
            <TextView
                android:textAlignment="center"
                android:id="@+id/tglAkhir"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="31/02/2023"
                android:textSize="13dp" />

        </GridLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selisih (Pengeluaran/Pemasukan)"
        android:textSize="13dp"
        android:textStyle="bold" />

    <TextView
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:id="@+id/selisih"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rp 0"
        android:textSize="13dp" />


</LinearLayout>