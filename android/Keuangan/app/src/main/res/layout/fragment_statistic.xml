<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardElevation="5dp"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="Pemasukan"
                android:id="@+id/tvJenis"/>

            <TableLayout
                android:id="@+id/tableLayoutPemasukan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">

                <!-- Header Pemasukan -->
                <TableRow
                    android:background="@color/blue_dark">

                    <TextView
                        android:text="Jumlah"
                        android:textStyle="bold"
                        android:padding="15dp"
                        android:textColor="@color/white"
                        android:textAlignment="center"/>

                    <TextView
                        android:text="Catatan"
                        android:textStyle="bold"
                        android:padding="15dp"
                        android:textColor="@color/white"
                        android:textAlignment="center"/>

                    <TextView
                        android:text="Tanggal"
                        android:textStyle="bold"
                        android:padding="15dp"
                        android:textColor="@color/white"
                        android:textAlignment="center"/>
                </TableRow>

                <!-- Data Pemasukan (Ditambahkan secara dinamis) -->
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    tools:listitem="@layout/item_table_row"
                    tools:itemCount="4"
                    android:id="@+id/rvPemasukan"/>

            </TableLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardElevation="5dp"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="Pengeluaran" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">

                <!-- Header Pemasukan -->
                <TableRow
                    android:background="@color/blue_dark">

                    <TextView
                        android:text="Jumlah"
                        android:textStyle="bold"
                        android:padding="15dp"
                        android:textColor="@color/white"
                        android:textAlignment="center"/>

                    <TextView
                        android:text="Catatan"
                        android:textStyle="bold"
                        android:padding="15dp"
                        android:textColor="@color/white"
                        android:textAlignment="center"/>

                    <TextView
                        android:text="Tanggal"
                        android:textStyle="bold"
                        android:padding="15dp"
                        android:textColor="@color/white"
                        android:textAlignment="center"/>
                </TableRow>

                <!-- Data Pemasukan (Ditambahkan secara dinamis) -->
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    tools:listitem="@layout/item_table_row"
                    tools:itemCount="4"
                    android:id="@+id/rvPengeluaran"/>

            </TableLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardElevation="5dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1">

            <TableRow>
                <TextView
                    android:text="Total Pemasukan:"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/textTotalPemasukan"
                    android:padding="8dp" />
            </TableRow>

            <!-- Total Pengeluaran -->
            <TableRow>
                <TextView
                    android:text="Total Pengeluaran:"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/textTotalPengeluaran"
                    android:padding="8dp" />
            </TableRow>

            <!-- Saldo -->
            <TableRow>
                <TextView
                    android:text="Saldo:"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/textSaldo"
                    android:padding="8dp" />
            </TableRow>
        </TableLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>